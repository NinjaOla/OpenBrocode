<UserControl x:Class="OpenBrocode.FacebookUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenBrocode"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" MinHeight="25"/>
            <RowDefinition Height="14*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" MinWidth="75"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Name="stackLeft" Grid.Row="1" Grid.Column="0"/>
        <StackPanel Name="stackMid" Grid.Row="1" Grid.Column="1"/>
        <StackPanel Name="stackTop" Grid.Row="0" Grid.ColumnSpan="2"/>

        <WrapPanel Grid.Row="1" Grid.Column="1">
            <Label Content="Test label at the middle UC" Name="lblMid"/>
        </WrapPanel>

    </Grid>
</UserControl>
