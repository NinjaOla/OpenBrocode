<Window x:Class="OpenBrocode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:OpenBrocode"
        Title="MainWindow" Height="350" Width="525">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Name="stackLeft" Grid.Row="1" Grid.Column="0"/>
        <StackPanel Name="stackMid" Grid.Row="1" Grid.Column="1"/>
        <StackPanel Name="stackTop" Grid.Row="0" Grid.ColumnSpan="2"/>
        <WrapPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical">
            <Button Content="Home"/>
        </WrapPanel>
        <WrapPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical">
            <Button Content="Facebook"/>
            <Button Content="Twitter"/>
            <Button Content="Mail"/>
            <Button Content="Twitch"/>
            <Button Content="Instagram"/>
            <Button Content="Grindr"/>

        </WrapPanel>

    </Grid>
</Window>
