<UserControl x:Class="OpenBrocode.WelcomeUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenBrocode"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Label Content="Username:" Name="lblMid" Margin="15,89,0,0"/>
        <TextBox x:Name="textBoxMain" HorizontalAlignment="Left" Height="19" Margin="89,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="161" TextChanged="textBoxMain_TextChanged"/>
        <Label Content="Password:" Name="lblMidDown" Margin="15,120,0,0"/>
        <PasswordBox x:Name="pwBoxMain" HorizontalAlignment="Left" Margin="89,125,0,0" VerticalAlignment="Top" Width="161"/>
        <Button Name="Login" Content="Log in" Click="Login_Click" IsDefault="True"  Height="19" Width="50" Margin="200,175,50,106"/>
        <Button Name="Register" Content="Register" Click="Register_Click" Height="19" Width="50" Margin="145,175,105,106"/>
        <Label Content="Forgot password?" HorizontalAlignment="Left" MouseLeftButtonDown="Label_MouseLeftButtonDown_1" Margin="145,199,0,-199"/>

    </Grid>
</UserControl>
