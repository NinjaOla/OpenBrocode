<UserControl x:Class="OpenBrocode.ForgotPasswordUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenBrocode"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Label Content="Email:" Name="lblMid" Margin="35,120,0,0"/>
        <TextBox x:Name="textBoxFace" HorizontalAlignment="Left" Height="19" Margin="89,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="161"/>
        <Button Name="Reset_password" Content="Reset password" Click="Reset_password_Click" IsDefault="True" Height="19" Width="90" Margin="160,175,50,106"/>
        <Button Name="Cancel" Content="Cancel" Click="Cancel_Click" IsCancel="True" Height="19" Width="50" Margin="105,175,145,106"/>
    </Grid>
</UserControl>
