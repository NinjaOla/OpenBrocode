<UserControl x:Class="OpenBrocode.MailUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenBrocode"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBox Name="mailTo" Text="Recipent" Height="30" Width="200" VerticalAlignment="Top" Margin="50,44,50,0"></TextBox>
        <TextBox Name="subject" Text="Subject" Height="30" Width="200" VerticalAlignment="Center" Margin="50,79,50,191"></TextBox>
        <TextBox Name="body" Text="Message body" Height="103" Width="200" VerticalAlignment="Bottom" RenderTransformOrigin="0.473,-2.32" Margin="50,0,50,83"></TextBox>
        <Button Name="_sendBtn" Content="Send Mail" Click="_sendBtn_Click" Height="20" Width="100" Margin="50,222,150,58"></Button>
        <Button Name="_cancelBtn" Content="Cancel" Click="_cancelBtn_Click" Height="20" Margin="155,222,50,58"/>

    </Grid>
</UserControl>
